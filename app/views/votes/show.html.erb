<div class="page-header">
  <h3>Vote #<%= @vote.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Insight</dt>
      <dd>
        <% if @vote.question.present? %>
          <a href="/insights/<%= @vote.insight_id %>">
            <%= @vote.question.presentation_id %>
          </a>
        <% end %>
      </dd>

      <dt>Contributor</dt>
      <dd>
        <% if @vote.contributor.present? %>
          <a href="/contributors/<%= @vote.contributor_id %>">
            <%= @vote.contributor.presentation_id %>
          </a>
        <% end %>
      </dd>

      <dt>Vote</dt>
      <dd><%= @vote.vote %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/votes" class="btn btn-primary">
        Back
      </a>
      <a href="/votes/<%= @vote.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_vote/<%= @vote.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
