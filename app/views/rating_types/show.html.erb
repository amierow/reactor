        <label for="rating_type_id" class="control-label">
          Rating type
        </label>

        <%= select_tag(:rating_type_id, options_from_collection_for_select(RatingType.all, :id, :rating_type), :class => "form-control") %>
      </div>

      <button class="btn btn-block btn-success">
