<div class="page-header">
  <h1>
    Ratings
    <a href="/ratings/new" class="btn btn-lg btn-success">New Rating</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Insight</th>
        <th>Contributor</th>
        <th>Rating type</th>
        <th>Rating</th>
        <th>Feedback</th>
        <th>Actions</th>
      </tr>

      <% @ratings.each do |rating| %>
      <tr>
        <td>
          <% if rating.question.present? %>
            <a href="/insights/<%= rating.question.id %>">
              <%= rating.question.presentation_id %>
            </a>
          <% end %>
        </td>
        <td>
          <% if rating.contributor.present? %>
            <a href="/contributors/<%= rating.contributor.id %>">
              <%= rating.contributor.presentation_id %>
            </a>
          <% end %>
        </td>
        <td>
          <% if rating.rating_type.present? %>
            <a href="/rating_types/<%= rating.rating_type.id %>">
              <%= rating.rating_type.rating_type %>
            </a>
          <% end %>
        </td>
        <td><%= rating.rating %></td>
        <td><%= rating.feedback %></td>
        <td>
          <a href="/ratings/<%= rating.id %>" class="btn btn-primary">Show</a>
          <a href="/ratings/<%= rating.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_rating/<%= rating.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @ratings, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
