<div class="page-header">
  <h3>Rating #<%= @rating.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Insight</dt>
      <dd>
        <% if @rating.question.present? %>
          <a href="/insights/<%= @rating.insight_id %>">
            <%= @rating.question.presentation_id %>
          </a>
        <% end %>
      </dd>

      <dt>Contributor</dt>
      <dd>
        <% if @rating.contributor.present? %>
          <a href="/contributors/<%= @rating.contributor_id %>">
            <%= @rating.contributor.presentation_id %>
          </a>
        <% end %>
      </dd>

      <dt>Rating type</dt>
      <dd>
        <% if @rating.rating_type.present? %>
          <a href="/rating_types/<%= @rating.rating_type_id %>">
            <%= @rating.rating_type.rating_type %>
          </a>
        <% end %>
      </dd>

      <dt>Rating</dt>
      <dd><%= @rating.rating %></dd>

      <dt>Feedback</dt>
      <dd><%= @rating.feedback %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/ratings" class="btn btn-primary">
        Back
      </a>
      <a href="/ratings/<%= @rating.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_rating/<%= @rating.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Rating has many presentation -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Presentation
      </li>

      <% @rating.presentation.each do |presentation| %>
        <li class="list-group-item">
          <a href="/presentations/<%= presentation.id %>">
            <%= presentation.lead_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/presentations/<%= presentation.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/presentations/<%= presentation.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_presentation/<%= presentation.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
