<!-- Validation failure messages -->
<% if @presentation.errors.any? %>
  <% @presentation.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Presentation</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_presentation" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for lead_id -->
      <input type="hidden" name="lead_id" value="<%= current_user.id %>">

      <!-- Label and input for date -->
      <div class="form-group">
        <label for="date" class="control-label">
          Date
        </label>

        <input type="text" id="date" name="date" placeholder="Date" class="form-control" value="<%= @presentation.date %>">
      </div>

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @presentation.name %>">
      </div>

      <button class="btn btn-success">
        Create Presentation
      </button>
      or
      <a href="/presentations">Cancel</a>
    </form>
  </div>
</div>
