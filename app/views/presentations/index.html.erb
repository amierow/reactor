<div class="page-header">
  <h1>
    Your Presentations
    <a href="/presentations/new" class="btn btn-lg btn-success">New Presentation</a>
    </div><div class="row mb-1">

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Date</th>
        <th>Name</th>
        <th>Created</th>
        <th>Actions</th>
        <th>ID</th>
      </tr>

      <% @presentations.each do |presentation| %>
      <tr>
        <td><%= presentation.date %></td>
        <td><%= presentation.name %></td>
        <td><%= time_ago_in_words(presentation.created_at, include_seconds: true)%> ago</td>
        <td>
          <a href="/presentations/<%= presentation.id %>" class="btn btn-primary">Enter</a>
          
          <% if current_lead == presentation.lead %>
            <a href="/presentations/<%= presentation.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_presentation/<%= presentation.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        <td><%=presentation.id%></td>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>

  </div>
</div>

  </h1>

