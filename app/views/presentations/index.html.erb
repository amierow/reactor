<div class="page-header">
  <h1>
    Presentations
    <a href="/presentations/new" class="btn btn-lg btn-success">New Presentation</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "presentations_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

<div class="form-group">
    <%= f.label :date_cont, "Date contains" %>
    <%= f.text_field :date_cont, :class => "form-control", :placeholder => "Date contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :lead_email_cont, "Lead email contains" %>
      <%= f.text_field :lead_email_cont, :class => "form-control", :placeholder => "Lead email contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/presentations" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#presentations_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Lead</th>
        <th>Date</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @presentations.each do |presentation| %>
      <tr>
        <td>
          <% if presentation.lead.present? %>
            <a href="/leads/<%= presentation.lead.id %>">
              <%= presentation.lead.email %>
            </a>
          <% end %>
        </td>
        <td><%= presentation.date %></td>
        <td><%= presentation.name %></td>
        <td>
          <a href="/presentations/<%= presentation.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == presentation.lead %>
            <a href="/presentations/<%= presentation.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_presentation/<%= presentation.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @presentations, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
