<div class="page-header">
  <h1>
    Contributors
    <a href="/contributors/new" class="btn btn-lg btn-success">New Contributor</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Presentation</th>
        <th>Name</th>
        <th>Email</th>
        <th>Position</th>
        <th>Department</th>
        <th>Facility</th>
        <th>Actions</th>
      </tr>

      <% @contributors.each do |contributor| %>
      <tr>
        <td><%= contributor.presentation_id %></td>
        <td><%= contributor.name %></td>
        <td><%= contributor.email %></td>
        <td><%= contributor.position %></td>
        <td><%= contributor.department %></td>
        <td><%= contributor.facility %></td>
        <td>
          <a href="/contributors/<%= contributor.id %>" class="btn btn-primary">Show</a>
          <a href="/contributors/<%= contributor.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_contributor/<%= contributor.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
