<!-- Validation failure messages -->
<% if @contributor.errors.any? %>
  <% @contributor.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Contributor</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_contributor" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for presentation_id -->
      <div class="form-group">
        <label for="presentation_id" class="control-label">
          Presentation
        </label>

        <input type="text" id="presentation_id" name="presentation_id" placeholder="Presentation" class="form-control" value="<%= @contributor.presentation_id %>">
      </div>

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @contributor.name %>">
      </div>

      <!-- Label and input for email -->
      <div class="form-group">
        <label for="email" class="control-label">
          Email
        </label>

        <input type="text" id="email" name="email" placeholder="Email" class="form-control" value="<%= @contributor.email %>">
      </div>

      <!-- Label and input for position -->
      <div class="form-group">
        <label for="position" class="control-label">
          Position
        </label>

        <input type="text" id="position" name="position" placeholder="Position" class="form-control" value="<%= @contributor.position %>">
      </div>

      <!-- Label and input for department -->
      <div class="form-group">
        <label for="department" class="control-label">
          Department
        </label>

        <input type="text" id="department" name="department" placeholder="Department" class="form-control" value="<%= @contributor.department %>">
      </div>

      <!-- Label and input for facility -->
      <div class="form-group">
        <label for="facility" class="control-label">
          Facility
        </label>

        <input type="text" id="facility" name="facility" placeholder="Facility" class="form-control" value="<%= @contributor.facility %>">
      </div>

      <button class="btn btn-success">
        Create Contributor
      </button>
      or
      <a href="/contributors">Cancel</a>
    </form>
  </div>
</div>
